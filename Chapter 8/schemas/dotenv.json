{
  "type": "object",
  "$id": "schema:dotenv",
  "required": [
    "MONGO_URL",
    "JWT_SECRET"
  ],
  "properties": {
    "NODE_ENV": {
      "type": "string",
      "default": "development"
    },
    "PORT": {
      "type": "integer",
      "default": 3000
    },
    "MONGO_URL": {
      "type": "string"
    },
    "JWT_SECRET": {
      "type": "string"
    },
    "JWT_EXPIRE_IN": {
      "type": "string",
      "default": "1h"
    }
  }
}